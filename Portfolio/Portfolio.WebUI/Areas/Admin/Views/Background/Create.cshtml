@model BackgroundCreateCommand

@{
    ViewData["Title"] = "Create";

}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">

            <div class="page-header-title">
                <div class="d-inline">

                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!"></a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">

                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Basic table card start -->
    <div class="card">
        <div class="card-header">

            <span>use class <code>table</code> inside table element</span>

        </div>
        <div class="card-block table-border-style">

            <div class="card-block">

                <form method="post" asp-action="create" enctype="multipart/form-data">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Title">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Title">
                            <span asp-validation-for="Title" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Description">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Description">
                            <span asp-validation-for="Description" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="DateRange">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="DateRange">
                            <span asp-validation-for="DateRange" class="text-danger">
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Location">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Location">
                            <span asp-validation-for="Location" class="text-danger">
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="ImageFile">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="ImageFile">
                            <span asp-validation-for="ImageFile" class="text-danger">
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="BackgroundType">

                        </label>
                        <div class="col-sm-10">
                            <select id="typelist" onchange="GetSelectedTextValue(this)" asp-for="BackgroundType" asp-items="new SelectList(ViewBag.BackList)">

                            </select>
                        </div>
                     
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="BackgroundLevel">

                        </label>
                        <div class="col-sm-10">
                            <select asp-for="BackgroundLevel" id="acas"  asp-items="new SelectList(ViewBag.AcademicTypes)">
                                <option disabled selected>---Choose---</option>
                            </select>
                        </div>
                        <div class="col-sm-10">
                            <select asp-for="BackgroundLevel" id="pros" style="display:none" asp-items="new SelectList(ViewBag.ProLevels)">
                                <option disabled selected>---Choose---</option>

                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12 d-flex justify-content-end">

                            <button class="btn btn-success mr-2">
                                Save
                            </button>
                            <a class="btn btn-info" asp-action="index">
                                Go Back
                            </a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- Basic table card end -->
@section addjs{ 
   <script>
       function GetSelectedTextValue(education) {
           var sleTex = education.options[education.selectedIndex].innerHTML;
           var selVal = education.value;
           //alert("Selected Text: " + sleTex + " Value: " + selVal);
           if (selVal == "professional") {
               document.getElementById('pros').style.display = "block"
               document.getElementById('acas').style.display = "none"
           }
           if (selVal == "academic") {
               document.getElementById('pros').style.display = "none"
               document.getElementById('acas').style.display = "block"
           }
       }
       
   </script>

}