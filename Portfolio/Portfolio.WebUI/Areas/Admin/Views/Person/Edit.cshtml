
@model Person

@{
    ViewData["Title"] = "Edit";
   
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            
            <div class="page-header-title">
                <div class="d-inline">
                   
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!"></a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                       
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Basic table card start -->
    <div class="card">
        <div class="card-header">
          
            <span>use class <code>table</code> inside table element</span>

        </div>
        <div class="card-block table-border-style">
          
            <div class="card-block">
               
                <form method="post" asp-action="edit">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Name">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Age">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Age">
                            <span asp-validation-for="Age" class="text-danger">
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Location">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Location">
                            <span asp-validation-for="Location" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Experiences">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Experiences">
                            <span asp-validation-for="Experiences" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Degree">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Degree">
                            <span asp-validation-for="Degree" class="text-danger">
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="CareerLevel">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="CareerLevel">
                            <span asp-validation-for="CareerLevel" class="text-danger">
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Phone">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Phone">
                            <span asp-validation-for="Phone" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Fax">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Fax">
                            <span asp-validation-for="Fax" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Email">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Website">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Website">
                            <span asp-validation-for="Website" class="text-danger">
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Bio">

                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Bio">
                            <span asp-validation-for="Bio" class="text-danger">
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12 d-flex justify-content-end">

                            <button class="btn btn-success mr-2">
                                Save
                            </button>
                            <a class="btn btn-info" asp-action="index">
                                Go Back
                            </a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- Basic table card end -->
