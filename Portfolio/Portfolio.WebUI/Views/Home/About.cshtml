@model AboutMeViewModel 


@{
    ViewData["Title"] = "About";
}

<div role="tabpanel" class="tab-pane fade in active" id="about-me">
    <div class="inside-sec">
        <!-- BIO AND SKILLS -->
        <h5 class="tittle">About Me</h5>

        <!-- Blog -->
        <section class="about-me padding-top-10">

            <!-- Personal Info -->
            <ul class="personal-info">
                <li>
                    <p> <span> Name</span>@Model.PersonDto.Name</p>
                </li>
                <li>
                    <p> <span> Age</span> @Model.PersonDto.Age Years </p>
                </li>
                <li>
                    <p> <span> Location</span>@Model.PersonDto.Location</p>
                </li>
                <li>
                    <p> <span> Experience</span>@Model.PersonDto.Experience Years </p>
                </li>
                <li>
                    <p> <span> Degree</span> @Model.PersonDto.Degree </p>
                </li>
                <li>
                    <p> <span> Career Level</span> @Model.PersonDto.CareerLevel </p>
                </li>
                <li>
                    <p> <span> Phone</span> @Model.PersonDto.Phone </p>
                </li>
                <li>
                    <p> <span> FAX</span> @Model.PersonDto.Fax </p>
                </li>
                <li>
                    <p> <span> E-mail</span> <a href="#."> @Model.PersonDto.Email</a> </p>
                </li>
                <li>
                    <p> <span> Website</span><a href="#."> @Model.PersonDto.Website </a></p>
                </li>
            </ul>

            <!-- I’m Web Designer -->
            <h5 class="tittle">I’m Web Designer</h5>
            <div class="padding-20">
                <p>
                   @Model.PersonDto.Bio
                </p>
            </div>

            <!-- Services -->
            <h5 class="tittle">Services</h5>
            <div class="row padding-20 margin-top-50">

                @foreach (var service in Model.Services)
                {
                    <!-- Icon -->
                    <div class="col-md-4 text-center">
                        <div class="icon-box i-large ib-black">
                            <div class="ib-icon"> <i class="fa fa-whatsapp"></i> </div>
                            <div class="ib-info">
                                <h4 class="h6">@service.Title</h4>
                                <p>@service.Description</p>
                            </div>
                        </div>
                    </div>

                }

            </div>


            <!-- Skills -->
            <h5 class="tittle">Skills</h5>

            <!-- Sound Engineering -->
            <div class="panel-group accordion padding-20" id="accordion">
                <div class="panel panel-default">
                    @foreach (var skill in Model.Skills)
                    {
                        <div class="row">
                            <div class="col-sm-4">
                                <!-- PANEL HEADING -->
                                <div class="panel-heading"> 
                                    <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#@skill.Id-collapse" class="collapsed"> @skill.SkillName</a> </h4>
                                </div>
                            </div>

                            <!-- Skillls Bars -->
                            <div class="col-sm-8">
                                <div class="progress"> @{ 
                                    var rate = skill.Rate + "%";
                                }
                                    <div class="progress-bar" role="progressbar" aria-valuenow="@skill.Rate" aria-valuemin="0" aria-valuemax="100" style="width: @rate;"> <span class="sr-only">@skill.Rate % Complete</span> </div>
                                </div>
                               
                                <!-- Skillls Text -->
                                <div id="@skill.Id-collapse" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <p>@skill.Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

