@model PagedViewModel<BlogPost>

<section class="blog blog-page padding-20 padding-top-50 padding-bottom-50 ">


    @foreach (var post in Model.Items)
    {

        <!-- Blog Post -->
        <article>
            <img class="img-responsive" src="~/uploads/images/@post.ImagePath" alt="">
            <div class="post-info">
                <div class="post-in">
                    <div class="extra"> <span><i class="icon-calendar"></i>Aug 29, 2015</span> <span class="margin-left-15"><i class="icon-user"></i>Admin</span> <span class="margin-left-15"><i class="icon-bubbles"></i> Featured</span></div>
                    <a href="#." class="tittle-post"> @post.Title </a>
                    @if (post.Body.Length > 100)
                    {
                        <p>@post.Body.Substring(0, 100)...</p>

                    }
                    else
                    {
                        <p>@post.Body</p>

                    }
                    <a asp-controller="BlogPost" asp-action="Detail" asp-route-id="@post.Id" class="btn-1">Read More <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        </article>
    }

    @Model.GetPager(Url, "Index", paginateFunction: "goPage")

    <!-- Pagination -->
  
</section>